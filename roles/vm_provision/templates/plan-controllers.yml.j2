parameters:
  rhnuser: {{ rhnuser | quote }}
  rhnpassword: {{ rhnpassword | quote }}

vms:
{% for name in controller_names %}
  {{ name }}:
    memory: 32768
    numcpus: 8
    disks:
      - size: {{ disk_size_root }}
        interface: "sata"
{% for i in range(num_ceph_disks | default(3)) %}
      - size: {{ disk_size_ceph }}
        interface: "sata"
{% endfor %}
    nets: "{{ libvirt_networks | map(attribute='name') | list }}"
{% endfor %}